extends layout
block content
    // / Intro Single star /
    section.intro-single
      .container
        .row
          .col-md-12.col-lg-8
            .title-single-box
              h1.title-single Our Amazing Bangalows
          .col-md-12.col-lg-4
            nav.breadcrumb-box.d-flex.justify-content-lg-end(aria-label='breadcrumb')
              ol.breadcrumb
                li.breadcrumb-item
                  a(href='/') Home
                li.breadcrumb-item(aria-current='page' style='color: black;')
                  | Bangalow
    // / Intro Single End /
    // / Property Grid Star /
    section.property-grid.grid
      .container
        .row
          .col-sm-12
            .grid-option
              form
                select.custom-select
                  option(selected='') All
                  option(value='1') New to Old
                  option(value='2') For Rent
                  option(value='3') For Sale
          if data.length
            for apartment in data
              .col-md-4
                .card-box-a.card-shadow
                  .img-box-a
                    img.img-a.img-fluid(src='/uploads/'+apartment.images[0], alt='' style='width: 100%;')
                  .card-overlay
                    .card-overlay-a-content
                      .card-header-a
                        h2.card-title-a
                          a(href='/buildings/bangalow/'+apartment._id)
                            | #{apartment.heading}
                            br
                            span(style='font-size:0.5em;')
                              | #{apartment.location}
                      .card-body-a
                        .price-box.d-flex
                          span.price-a KES #{Number(apartment.price).toLocaleString()}
                        a.link-a(href='/buildings/bangalow/'+apartment._id)
                          | Click here to view
                          span.ion-ios-arrow-forward
                      //.card-footer-a
                        ul.card-info.d-flex.justify-content-around
                          li
                            h4.card-info-title Area
                            span
                              | 340m
                              sup 2
                          li
                            h4.card-info-title Beds
                            span 2
                          li
                            h4.card-info-title Baths
                            span 4
                          li
                            h4.card-info-title Garages
                            span 1
            
          else
            .row(style='text-align: center;')
              .col-sm-12
